{
  "name": "slashbot",
  "version": "1.0.5",
  "license": "MIT",
  "description": "CLI assistant powered by Grok API - lightweight Claude Code alternative",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "slashbot": "./dist/slashbot"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build --compile --minify src/index.ts --outfile dist/slashbot",
    "start": "./dist/slashbot",
    "tsc": "tsc",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "clipboardy": "^4.0.0",
    "dotenv": "^17.2.3",
    "telegraf": "^4.16.3",
    "terminal-image": "^4.2.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.10",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "cli",
    "ai",
    "grok",
    "terminal",
    "assistant"
  ],
  "author": "",
  "license": "MIT"
}
