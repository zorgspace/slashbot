{
  "name": "slashbot",
  "version": "2.0.0",
  "license": "MIT",
  "description": "CLI assistant powered by Grok API - lightweight Claude Code alternative",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "slashbot": "./dist/slashbot"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build --compile --minify src/index.ts --outfile dist/slashbot",
    "install-global": "bun run build && sudo cp dist/slashbot /usr/local/bin/slashbot",
    "start": "./dist/slashbot",
    "tsc": "tsc",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@opentui/core": "^0.1.77",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "bip39": "^3.1.0",
    "bs58": "^6.0.0",
    "clipboardy": "^4.0.0",
    "diff-match-patch": "^1.0.5",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "ed25519-hd-key": "^1.3.0",
    "fast-diff": "^1.3.0",
    "fastest-levenshtein": "^1.0.16",
    "opentui-spinner": "^0.0.6",
    "ora": "^9.3.0",
    "telegraf": "^4.16.3",
    "terminal-image": "^4.2.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/fast-diff": "^1.1.0",
    "@types/node": "^25.1.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unused-imports": "^4.3.0",
    "inversify": "^7.11.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.8.1",
    "reflect-metadata": "^0.2.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "xml2js": "^0.6.2",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "keywords": [
    "cli",
    "ai",
    "grok",
    "terminal",
    "assistant"
  ],
  "author": ""
}
