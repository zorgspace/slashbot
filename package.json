{
  "name": "slashbot",
  "version": "2.1.1",
  "license": "MIT",
  "description": "CLI assistant powered by Grok API - lightweight Claude Code alternative",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "slashbot": "./dist/slashbot"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build --compile --minify src/index.ts --external '@opentui/core-*' --outfile dist/slashbot && mkdir -p dist/node_modules/@opentui && cp -r node_modules/@opentui/core-$(uname -s | tr A-Z a-z)-$(uname -m | sed 's/x86_64/x64/' | sed 's/aarch64/arm64/') dist/node_modules/@opentui/",
    "install-global": "bun run build && sudo mkdir -p /usr/local/lib/slashbot/node_modules/@opentui && sudo cp dist/slashbot /usr/local/lib/slashbot/slashbot && sudo cp -r dist/node_modules/@opentui/* /usr/local/lib/slashbot/node_modules/@opentui/ && sudo rm -f /usr/local/bin/slashbot && printf '#!/bin/bash\\nNODE_PATH=/usr/local/lib/slashbot/node_modules exec /usr/local/lib/slashbot/slashbot \"$@\"\\n' | sudo tee /usr/local/bin/slashbot > /dev/null && sudo chmod +x /usr/local/bin/slashbot",
    "start": "./dist/slashbot",
    "tsc": "tsc",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "lint": "eslint src/index.ts src/core/app/cli.ts src/core/config/constants.ts",
    "lint:fix": "eslint src/index.ts src/core/app/cli.ts src/core/config/constants.ts --fix",
    "lint:full": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.39",
    "@ai-sdk/google": "^3.0.23",
    "@ai-sdk/openai": "^3.0.26",
    "@ai-sdk/xai": "^3.0.49",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@opentui-ui/dialog": "^0.1.2",
    "@opentui/core": "^0.1.79",
    "@solana/spl-token": "^0.1.8",
    "@solana/web3.js": "^1.98.4",
    "ai": "^6.0.78",
    "bip39": "^3.1.0",
    "bs58": "^6.0.0",
    "clipboardy": "^4.0.0",
    "diff-match-patch": "^1.0.5",
    "discord.js": "^14.14.1",
    "dotenv": "^17.2.3",
    "ed25519-hd-key": "^1.3.0",
    "fast-diff": "^1.3.0",
    "fast-levenshtein": "^3.0.0",
    "fastest-levenshtein": "^1.0.16",
    "opentui-spinner": "^0.0.6",
    "ora": "^9.3.0",
    "telegraf": "^4.16.3",
    "terminal-image": "^1.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/bun": "^1.3.6",
    "@types/fast-diff": "^1.1.0",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unused-imports": "^4.4.1",
    "inversify": "^7.11.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.8.1",
    "reflect-metadata": "^0.2.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18",
    "xml2js": "^0.6.2",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "keywords": [
    "cli",
    "ai",
    "grok",
    "terminal",
    "assistant"
  ],
  "author": ""
}
